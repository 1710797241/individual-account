<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.models.dao.OtherAccountDao">
	<select id="selectAll" resultType="com.models.entity.Account">
		select account_name,account_password, account_balance,account_score,user_identity,is_admin,delete_status
		from account
	</select>
	<select id="selectByMap" parameterType="java.util.Map" resultType="com.models.entity.Account">
		select account_name,account_password, account_balance,account_score,user_identity,is_admin,delete_status
		from account

		<where>

		delete_status="no"
			<if test="account != null and account != ''">
				and account_name like "%"#{account}"%"
			</if>
			<if test="usercode != null and usercode != ''">
				and user_identity like "%"#{usercode}"%"
			</if>
		</where>

	</select>
	<insert id="insertMany" parameterType="com.dto.UserDto">
		insert into user1
		(name,email,phone)
		values
		<foreach collection="userList" item="user">
			(#{user.name},#{user.email},#{user.phone})
		</foreach>
	</insert>

	<update id="deleteAccount" parameterType="com.models.entity.Account">
		update account
		set delete_status = "yes"
		where account_code =  #{account_code}
	</update>
</mapper>